/* pages/express/express.wxss */

.namebox {
  z-index: 2;
  display: flex;
  flex-direction: row;
  justify-content: center;
  position: sticky;
  background-color: #f01548;
  color: white;
  padding: 10px;
  font-size: 15px;
}

.active {
  padding: 5px;
  margin: 0 10px 0 10px;
  background-color: white;
  color: #f01548;
  border-radius: 15px;
  box-shadow: 0 0 5px #bfbfbf inset;
}

.contentbox {
}

.express {
  padding: 25px 50rpx 25px 50rpx;
  display: flex;
  flex-direction: column;
  border-bottom: 1px solid #bfbfbf;
}

.tag {
  color: #f01548;
  font-size: 18px;
  font-weight: bold;
}

.stand {
  font-size: 15px;
}

.deletebutton {
  z-index: 1;
  display: inline-block;
  position: relative;
  bottom: 0px;
  left: 550rpx;
  font-size: 12px;
  width: 40px;
  text-align: center;
  color: white;
  padding: 2px 8px 2px 8px;
  background-color: #f01548;
  box-shadow: 0 0 5px #bfbfbf;
  border-radius: 12px;
}
