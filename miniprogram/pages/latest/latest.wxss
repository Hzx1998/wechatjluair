/* pages/latest/latest.wxss */
.rollbox{
  height:100%;
}

/*模板样式*/
.intro {

  margin-top: 7px;
}
.titlebox{
  font-size: 18px;
   background-color: white;
   color: #f01548;
}
.title{
  margin-left:10px;
  border-bottom-left-radius: 7px;
  border-bottom-right-radius: 7px;
  padding:2px 10px 2px 10px;
  background-color: #f01548;
  display: inline;
  color:white;
  box-shadow: 2px 2px 2px #bfbfbf;
}
.container{
   padding: 0 10px 0 10px;
   font-size: 15px;
    background-color: white;
}
.textbox{
  display: flex;
  flex-direction: row;
  border-bottom: solid #e6e6e6 1px;
  padding-top:5px;
}
.text{
   width: 450rpx;
     word-break:break-all;
}
.picture{
  margin:10px;
  width: 200rpx;
  box-shadow: 5px 5px 5px #e6e6e6 ;
}
