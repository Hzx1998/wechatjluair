/* pages/broadcast/broadcast.wxss */

/*导航栏*/

.toptabbar {
  position: sticky;
  top: 0px;
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  background-color: #f01548;
  height: 45px;
  padding-top: 2px;
  border: hidden;
  z-index: 2;
}

.tabbuttonicon {
  display: flex;
  flex-direction: column;
  align-items: center;
  padding-top: 2px;
}

.buttonicon {
  width: 25px;
  height: 25px;
}

.buttonname {
  font-size: 10px;
  text-align: center;
  color: white;
}

.active {
  background-color: white;
  border-top-left-radius: 5px;
  border-top-right-radius: 5px;
}

.active .buttonname {
  color: #f01548;
}

/*滑动界面*/

.rollbox {
  height: 100%;
  background-color: white;
}

#egg {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

#egg image {
  width: 237px;
  height: 60px;
}

/*加载动画*/

.loadingbox {
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}

.loading {
  width: 32px;
  height: 32px;
}

/*启事*/

.noticebox {
  margin: 10px;
  box-shadow: 0 0 5px #bfbfbf;
  border-radius: 10px;
}

.ntbox {
  display: flex;
  flex-direction: row;
  justify-content: flex-start;
  height: 25px;
}

.ntag {
  width: 60px;
  font-size: 15px;
  color: white;
  text-align: center;
  background-color: #f01548;
  border: 1px solid #f01548;
  border-top-left-radius: 10px;
}

.ntitle {
  border-bottom: 2px #f01548 solid;
  padding-left: 20px;
  padding-right: 20px;
  color: #f01548;
  text-align: center;
  font-size: 15px;
  overflow: hidden;
  text-overflow: ellipsis;
}

.ndescription {
  font-size: 16px;
  margin: 10px 15px 15px 15px;
  word-wrap: break-word;
  white-space: pre-wrap;
  overflow: hidden;
  text-overflow: ellipsis;
  display: -webkit-box;
  -webkit-line-clamp: 3;
  -webkit-box-orient: vertical;
}

.nimgbox {
  margin-left: 10px;
  display: flex;
  flex-direction: row;
}

.nimg {
  background-color: #e6e6e6;
  height: 64px;
  margin-left: 5px;
  margin-bottom: 5px;
  box-shadow: 0 0 2px #bfbfbf;
}

.nimg image {
  width: 64px;
  height: 64px;
}

/*加载更多*/

.loadingmore {
  color: #bfbfbf;
  font-size: 15px;
  height: 20px;
  width: 750rpx;
  text-align: center;
  padding: 10px 0 10px 0;
  margin-top: 10px;
  border-top:1px solid #e6e6e6;
  
}
/*活动*/

.activitybox {
  width: 730rpx;
  border: 1px solid #e6e6e6;
  border-radius: 10px;
  background-color: white;
  box-shadow: 0px 0px 5px #9f9f9f;
  margin: 15rpx 10rpx 15rpx 10rpx;
}

.aimgbox {
  border-top-left-radius: 10px;
  border-top-right-radius: 10px;
  background-color: #e6e6e6;
  width: 100%;
  height: 422rpx;
}

.aimgbox image {
  border-radius: inherit;
  width: 100%;
  height: 100%;
  box-shadow: 0 0 5px #bfbfbf inset;
}

.atitle {
  padding: 10px;
  background-color: white;
  color: black;
  font-size: 18px;
  opacity: 0.5;
}

.asociety {
  font-size: 12px;
  text-align: right;
}

.asignup {
  font-size: 12px;
  text-align: right;
}

/*二手*/

.secondhandbox {
  display: flex;
  flex-direction: row;
  flex-wrap: wrap;
}

.secondhand {
  display: flex;
  flex-direction: column;
  width: 345rpx;
  margin: 15rpx;
  border-radius: 15rpx;
  background-color: #e6e6e6;
  box-shadow: 0 0 5px #bfbfbf;
}

.simgbox {
  width: 345rpx;
  height: 150px;
  border-top-right-radius: 15rpx;
  border-top-left-radius: 15rpx;
  background-color: #e6e6e6;
}

.simgbox image {
  width: inherit;
  height: inherit;
  border-radius: inherit;
}

.scontentbox {
  font-size: 12px;
  padding: 15rpx;
  border-top: 1px #e6e6e6 solid;
  border-bottom-right-radius: 15rpx;
  border-bottom-left-radius: 15rpx;
  background-color: white;
}
.stag{
    width: 50px;
    text-align: center;
    background-color: #f01548;
    border-radius: 5rpx;
    color: white;
    box-shadow: 0 0 5px #e6e6e6;
}
.stitle{
      text-align: right;
      font-size: 15px;
      font-weight: bold;
      overflow: hidden;
      text-overflow: ellipsis;
}
.sprice{
    display: inline-block;
     border-bottom: 1px dashed #bfbfbf;
} 
/*代取*/

.expressbox {
  font-size: 16px;
  margin: 20rpx 20rpx 50rpx 20rpx;
  padding: 30rpx 0 0rpx 0;
  background-color: white;
  border-bottom: 1px solid #e6e6e6;
}

.taskbox {
  display: flex;
  flex-direction: row;
  justify-content: space-around;
  padding-bottom: 20rpx;
}

.stage {
  width: 50rpx;
  height: 50rpx;
  border: 2px #f01548 solid;
  padding: 5px;
  border-radius: 50%;
}

.taskbox view {
  width: 300rpx;
  padding: 10rpx;
  font-size: 15px;
}

.bcontact {
  text-align: right;
  color: #f01548;
  font-size: 12px;
  padding: 5px;
  border-radius: 10px;
}
